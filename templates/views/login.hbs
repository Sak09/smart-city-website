<body>

	{{>navbar}}
	<div class="alert-box">
		<p class="alert"></p> 
		</div>

    <div class="wrap">			
        <input type="checkbox" id="form_switch" style="display: none;">
	<div class="flipcard">
	    <div class="flipcard-inner">
		<div class="flipcard-front">
		    <form class="login-form" action="/login" method="post">
            		<div class="form-header">
                	    <h3>Login Form</h3>
                	    <p>Login to access your dashboard</p>
            		</div>
					
            		<div class="form-group">

            		<!--Password Input-->
                        <input type="text" class="form-input" name="email" placeholder="email@example.com" autocomplete="off">
            		</div>
            		<!--Password Input-->
            		<div class="form-group">
                	    <input type="password" class="form-input" name="password" placeholder="password" autocomplete="off">
            		</div>
            		<!--Login Button-->
            		<div class="form-group">
                        <form class="login-form" action="/changer" method="get">
                             <button class="form-button" type="submit" id="login">Login</button>
                        </form>
            		</div>
            		<div class="form-footer">
            		 Don't have an account? <label class="label-highlight" for="form_switch"> Sign Up </label>
            		</div>
					<div class="form-footer">
            		<label class="label-highlight" for="form_switch"><a href="/forgot-password">Forgot password</a></label>
            		</div>
        	</form>
	</div>
	  {{>signup}}
</div>
</div>
</div>
